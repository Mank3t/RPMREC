<Window x:Class="YP01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YP01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button  x:Name="BColFormChangeRed"  Height="110" Click="BColFormChangeRed_Click">red</Button>
            <Button x:Name="BColFormChangeGreen" Height="110" Click="BColFormChangeGreen_Click">green</Button>
            <Button x:Name="BColFormChangeBlue" Height="110"  Click="BColFormChangeBlue_Click">blue</Button>
            <Button x:Name="BColFormChangeYellow" Height="110"  Click="BColFormChangeYellow_Click">yellow</Button>
        </StackPanel>
    </Grid>
</Window>
